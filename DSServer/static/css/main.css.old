
body{
    padding: 1em;
}

h1{
    margin: 0.2em;
    font-variant: small-caps;
}

.inside{
    overflow: hidden;
}

.inside-bordered{
    margin-top: 0.2em;
    border-top: 1px solid gray;
    clear: both;
    padding: 0.3em 0;
}

ul.nav{
    list-style-type: none;
    padding: 0;
    margin: 0;
    float: left;
    overflow: hidden;
}

ul.nav > li{
    display: block;
    border: 1px solid black;
    padding: 0.2em 1em;
    margin: 0.2em;
    cursor: pointer;
    float: left;
}

ul.nav > li.current{
    background: lightblue;
}

.colophon-box{
    clear: both;
    border-top: 1px solid gray;
    margin-top: 1em;
    padding-top: 0.3em;
    font-size: 80%;
    text-align: center;
}

.overlay {
    visibility: hidden;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    text-align: center;
    z-index: 1000;
    background-color: rgba(150, 150, 150, 0.8);
}

.overlay div {
    width: 640px;
    margin: 200px auto;
    background-color: #CAE5FD;
    border: 2px solid #00546D;
    border-radius: 10px;
    padding: 0px 20px 20px 20px;
    text-align: left;
}

.validity-flag {
  margin-left: 5px;
}

#questionnaire {
  display: none;
}

.simple-group, .aligned-group {
  padding: 0 0 10px 0;
}

.optional-section, .multiple-section, .framed {
  margin-top: 5px;
  border: 1px solid #aaa;
  border-radius: 5px;
  background-color: #eee;
  padding: 5px;
}

.optional-section {
  display: none;
}

.multiple-section {
  float: left;
}

.button-add, .button-remove {
    cursor: pointer;
}

.button-add {
    margin-top: 5px;
}

.short-desc {
  padding-top: 0;
  font-size: 90%;
  font-style: italic;
  color: gray;
}

.long-desc {
    padding: 10px;
    margin: 20px;
    border: 1px solid #ffff00;
    border-radius: 10px;
    background-color: #ffffdd;
}

.form-subpane {
  display: block;
}

.desc-subpane {
  display: inline-block;
  vertical-align: top;
  margin-top: 0px;
}

td, th {
    display: table-cell;
    vertical-align: top;
    padding: 4px;
}

.labeltd {
    width: 400px;
}

.table-text tr {
  border-bottom: 1px #ccc solid
}

.table-text td {
  width: 75%;
}

.table-text th {
  width: 25%;
  text-align: left;
}

input, textarea {
  border-color:#cccccc;
  padding:3px;
  border-width:1px;
  border-radius:3px;
  border-style:ridge;
  background-color: #FFFBFB;
}

input[type="text"], input[type="email"], textarea {
  width: 300px;
}

input[type="number"] {
  width: 80px;
}

textarea {
  height: 100px;
}

input[type="checkbox"], input[type="radio"] {
  position: relative;
  vertical-align: middle;
  top: 2px;
  margin-right: 5px;
}

input[type="submit"], .submit {
  background-color: #FBB48F;
  padding: 10px 20px;
  font-size: 110%;
  border-width: 1px;
  border-color: #FA7849;
  border-radius: 20px;
  border-style: groove;
}

label {
  line-height : 20px;
}
